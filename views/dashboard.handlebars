<h2>Your Posts</h2>

<button type="submit" class="new-post"><a href="/dashboard/new"> New Post </a></button>

<section>
    {{#if posts.length}}

    {{#each posts as |post|}}
    <div class="">
       <h4 class="post-title"><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
        <div class="post-body">
        <p class="post-body">{{content}}</p>
        <p class="post-author">Posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}}</p>
        </div>
    </div>
    {{/each}}
    {{/if}}
</section>

<script src="/js/new.js"></script>