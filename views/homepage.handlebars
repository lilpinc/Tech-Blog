{{#each posts as |post| }}
<article class="post">
        <div class="">
            <h4 class=""><a class="link" href="/post/{{id}}">{{title}}</a></h4>
            <div class="">
                <p class="">{{content}}</p>
                <p class="">Created by <span class="">{{user.username}}</span> on {{format_date
                    created_at}}</p>
            </div>
        </div>
</article>
{{/each}}


